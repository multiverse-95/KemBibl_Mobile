<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_fix"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    tools:context="com.kembibl.KemBibl.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_weight="0"
        android:orientation="vertical">


        <Button
            android:id="@+id/SearchBooks"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:onClick="goSearch"
            android:text="поиск книг"
            android:textColor="@color/colorWhite" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_weight="0"
        android:orientation="vertical">


        <Button
            android:id="@+id/myCab"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:onClick="my_cab"
            android:text="Личный кабинет"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:id="@+id/bibles"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="bibles"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Библиотеки"
            android:textColor="@color/colorWhite" />


    </LinearLayout>
    </LinearLayout>


</LinearLayout>