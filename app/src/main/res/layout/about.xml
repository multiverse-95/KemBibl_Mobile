<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo">

        </ImageView>
        <EditText
            android:id="@+id/Descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:text="@string/info_mibs" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Сайт каталога:">

        </TextView>


        <EditText
            android:id="@+id/mibs_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:text="http://catalog.kembibl.ru/" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Сайт мибс:">

        </TextView>

        <EditText
            android:id="@+id/mibs_bibl_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:text="http://библиотеки.кемеровские.рф" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Сайт КемГУ:">

        </TextView>

        <EditText
            android:id="@+id/kemsu_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:text="https://kemsu.ru/" />

    </LinearLayout>

</ScrollView>